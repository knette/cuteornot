<% @dogs.each do |d| %>
<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="<%=d.picture%>" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title"><%= d.name %></h5>
    <p class="card-text">Vote for me!</p>
    <%= link_to("Upvote", like_dog_path(d.id), method: :put, class: "btn btn-success") %> 
    <%= link_to("Voting Stats", "/dogs/#{d.id}", class: "btn btn-primary") %> 
  </div>
</div>
<% end %>
