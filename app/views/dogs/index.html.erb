<h1>Vote on this random pup! </h1>

<% @dogs.limit(1).order("Random()").each do |d| %>
<div class="card centerdiv">
  <img class="card-img-top" src="<%=d.picture%>" alt="dog picture">
  <div class="card-body">
    <h3><%= d.name %></h3>
    <p>Vote for me!</p>
    <div>
      <%= link_to("Cute", like_dog_path(d.id), method: :put, class: "btn btn-success cute") %> 
      <%= link_to("Not", dislike_dog_path(d.id), method: :put, class: "btn btn-warning not") %>
    </div>
    <%= link_to("Voting Stats", "/dogs/#{d.id}", class: "btn btn-primary") %>  
  </div>
</div>
<% end %>
<% if logged_in?%>
<%= link_to("New Dog", "/dogs/new", class: "btn btn-primary") %>
<% end %>
